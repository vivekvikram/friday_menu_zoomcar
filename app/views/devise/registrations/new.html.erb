<link href='http://fonts.googleapis.com/css?family=Nunito:400,700' rel='stylesheet' type='text/css'>
<h2 id="log">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :username, class: 'col-xs-2 control-label' %><br />
    <%= f.text_field :username, class: 'form-control', autofocus: true  %>
  </div>


  <div class="field form-group">
    <%= f.label :email, class: 'col-xs-2 control-label' %><br />
    <%= f.email_field :email, class: 'form-control', autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: 'col-xs-2 control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: 'col-xs-2 control-label' %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
