        <th>Name</th>
        <th>Item</th>
        <th colspan="2"></th>
      </tr>
    </thead>
</div>  
<% @orders.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.item %></td>
      <!-- <td><%= link_to 'Edit', edit_order_path(order) %></td> -->
    </tr>
  <% end %>
</table>
<%= link_to 'New Order', new_order_path, class: 'btn btn-primary btn-xs' %> |

<%= link_to "Sign In", new_member_session_path, :method => :get, class: 'btn btn-info btn-xs' %>|
<%= link_to 'Print', 'Index', :onclick => 'window.print();return false;', class: 'btn btn-primary btn-xs'%>
<% end %>
